        .payment-modal-buttons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .payment-confirm-btn {
            padding: 0.75rem 1.5rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 4px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .payment-confirm-btn:hover {
            background-color: #00508c;
        }

        .payment-cancel-btn {
            padding: 0.75rem 1.5rem;
            background-color: var(--secondary-color);
            color: white;
            border: none;
            border-radius: 4px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .payment-cancel-btn:hover {
            background-color: #5a6268;
        }

        /* Loading spinner */
        .loading-container {
            display: none;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.9);
            z-index: 1000;
        }

        .loading-spinner {
            width: 50px;
            height: 50px;
            border: 5px solid #f3f3f3;
            border-top: 5px solid var(--primary-color);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 1rem;
        }

        .loading-text {
            color: var(--primary-color);
            font-weight: 500;
            font-size: 1.2rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Footer styles */
        .footer {
            background-color: var(--dark-color);
            color: white;
            padding: 3rem 0;
        }

        .footer a {
            color: white;
            text-decoration: none;
        }

        .footer a:hover {
            color: #adb5bd;
        }

        .footer-social li {
            margin-bottom: 0.5rem;
        }

        .footer-social img {
            width: 20px;
            margin-right: 8px;
        }

        /* Button container styles */
        .button-container {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        /* User info summary styles */
        .user-info-summary {
            background-color: #f8f9fa;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--box-shadow);
        }

        .user-info-summary h3 {
            color: var(--primary-color);
            margin-bottom: 1rem;
            font-size: 1.2rem;
        }

        .user-info-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
        }

        .user-info-row {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1rem;
        }

        .user-info-item {
            flex: 1;
            min-width: 0;
        }

        .user-info-item strong {
            display: block;
            color: var(--secondary-color);
            font-size: 0.9rem;
        }

        .user-info-item span {
            color: var(--dark-color);
            font-weight: 500;
            word-break: break-word;
        }

        @media (max-width: 1300px) {
