    <script>
        document.addEventListener('DOMContentLoaded',async function() {
            const central_object = {};
            await razorpay();
            async function razorpay() {
                try {
                    const response = await fetch('/generateReadyList/razorPay');
                    const data = await response.json();
                    // console.log(data);
                    central_object.razorpayKeyId = data.razorpayKeyId;
    
                } catch (error) {
                    console.log(error);
                }
            }

            // const vipulPdfID = "687b52fe48e8e56cb37ce9ce";

            const step1 = document.getElementById('step1');
            const step2 = document.getElementById('step2');
            const nextBtn = document.getElementById('nextBtn');
            const backBtn = document.getElementById('backBtn');
            const downloadBtn = document.getElementById('downloadBtn');
            const downloadPdfBtn = document.getElementById('downloadPdfBtn');
            const step1Indicator = document.getElementById('step1-indicator');
            const step2Indicator = document.getElementById('step2-indicator');
            const paymentCompleteModal = document.getElementById('paymentCompleteModal');
            const loadingSpinner = document.getElementById('loadingSpinner');
            const phoneError = document.getElementById('phoneError');
            
            // Form fields
            const fullName = document.getElementById('fullName');
            const category = document.getElementById('category');
            const gender = document.getElementById('gender');
            const contactNumber = document.getElementById('contactNumber');
            const percentileRange = document.getElementById('percentileRange');
            const email = document.getElementById('email');
            
            // Summary fields
            const summaryName = document.getElementById('summaryName');
            const summaryContact = document.getElementById('summaryContact');
            const summaryEmail = document.getElementById('summaryEmail');
            const summaryCategoryFull = document.getElementById('summaryCategoryFull');
            const summaryGender = document.getElementById('summaryGender');
            const summaryPercentileFull = document.getElementById('summaryPercentileFull');

            // Phone number validation - only allow numbers
            contactNumber.addEventListener('input', function() {
                this.value = this.value.replace(/\D/g, ''); // Remove non-digit characters
                
                // Limit to 10 digits
                if (this.value.length > 10) {
                    this.value = this.value.slice(0, 10);
                }
                
                // Hide error if valid
                if (this.value.length === 10) {
                    this.classList.remove('has-error');
                    phoneError.style.display = 'none';
                }
            });

            nextBtn.addEventListener('click', function() {
                // Validate phone number
                const phoneNumber = contactNumber.value;
                if (!/^\d{10}$/.test(phoneNumber)) {
                    contactNumber.classList.add('has-error');
                    phoneError.style.display = 'block';
                    contactNumber.focus();
                    return;
                }

                // Validate other form fields
                if (!fullName.value || !category.value || !gender.value || !percentileRange.value || !email.value) {
                    alert('Please fill in all required fields');
                    return;
                }

                // Update summary
                summaryName.textContent = fullName.value;
                summaryContact.textContent = contactNumber.value;
                summaryEmail.textContent = email.value;
                summaryCategoryFull.textContent = category.value;
                summaryGender.textContent = gender.value;
                summaryPercentileFull.textContent = percentileRange.value;

                // Switch to step 2
                step1.classList.add('hidden');
                step2.classList.remove('hidden');
                
                // Update step indicator
                step1Indicator.classList.remove('active');
                step1Indicator.classList.add('completed');
                step2Indicator.classList.add('active');
            });

            backBtn.addEventListener('click', function() {
                // Switch back to step 1
                step2.classList.add('hidden');
                step1.classList.remove('hidden');
                
                // Update step indicator
                step2Indicator.classList.remove('active');
                step1Indicator.classList.add('active');
                step1Indicator.classList.remove('completed');
            });

            downloadBtn.addEventListener('click',async function() {
                // Show payment modal with amount 499
                showPaymentModal(499,async function(confirmed) {
                    if (confirmed) {
                        // Show loading spinner
                        const paymentSuccess = await processPayment();
                        
                        if(paymentSuccess){
                            paymentCompleteModal.classList.add('active');
                            setTimeout(function() {
                                paymentCompleteModal.classList.remove('active');
                                
                                // Hide the payment button and show the download button
                                downloadBtn.classList.add('hidden');
                                downloadPdfBtn.classList.remove('hidden');
                                
                            }, 3000);
                            await downloadPdf();
                        }else{
                            console.log("error")
                        }
                    }

                });
            });

            function planFinder(){
                
                const generalList = {
                    gopen: {
                        "90-100": "687b4a2c394a14b67bcff8bb",
                        "80-90": "687b4be8394a14b67bcff8c8",
                        "65-80": "687b4edb394a14b67bcff8d7",
                        "40-65": "687b52b7394a14b67bcff8e9",
                        "01-40": "687b52ff394a14b67bcff8ed"
                    },
                    lopen: {
                        "90-100": "687b4a93394a14b67bcff8be",
                        "80-90": "687b4d29394a14b67bcff8cc",
                        "65-80": "687b4f19394a14b67bcff8d9",
                        "40-65": "687b53d3394a14b67bcff8ef",
                        "01-40": "687b5403394a14b67bcff8f1"
                    },
                    gsebc: {
                        "90-100": "687b4abc394a14b67bcff8c0",
                        "80-90": "687b4dd1394a14b67bcff8cf",
                        "65-80": "687b4fc4394a14b67bcff8df",
                        "40-65": "687b548a394a14b67bcff8f3",
                        "01-40": "687b5502394a14b67bcff8f5"
                    },
                    lsebc: {
                        "90-100": "687b4b33394a14b67bcff8c2",
                        "80-90": "687b4e31394a14b67bcff8d1",
                        "65-80": "687b50cc394a14b67bcff8e1",
                        "40-65": "687b5bf8394a14b67bcff900",
                        "01-40": "687b56b1394a14b67bcff8f9"
                    },
                    gobc: {
                        "90-100": "687b4b69394a14b67bcff8c4",
                        "80-90": "687b4e6b394a14b67bcff8d3",
                        "65-80": "687b4f4a394a14b67bcff8db",
                        "40-65": "687b512b394a14b67bcff8e3",
                        "01-40": "687b5280394a14b67bcff8e7"
                    },
                    lobc: {
                        "90-100": "687b4ba6394a14b67bcff8c6",
                        "80-90": "687b4e90394a14b67bcff8d5",
                        "65-80": "687b4f80394a14b67bcff8dd",
                        "40-65": "687b5bbe394a14b67bcff8fe",
                        "01-40": "687b5b54394a14b67bcff8fc"
                    }
                };

                    let pdfID = '';

                    if(gender.value == 'Male'){
                        if(category.value == 'OPEN'){
                            pdfID = generalList.gopen[percentileRange.value]
                        }else if(category.value == 'OBC'){
                            pdfID = generalList.gobc[percentileRange.value]
                        }else{
                            pdfID = generalList.gsebc[percentileRange.value]
                        }
                    }else{
                        if(category.value == 'OPEN'){
                            pdfID = generalList.lopen[percentileRange.value]
                        }else if(category.value == 'OBC'){
                            pdfID = generalList.lobc[percentileRange.value]
                        }else{
                            pdfID = generalList.lsebc[percentileRange.value]
                        }
                    }
                    return pdfID;
            }

            // central_object.razorpayKeyId = "rzp_test_skrfIDWTsr5fbo";
            

            async function processPayment() {
                try {
                    
                    let pdf_id = planFinder(); 
                    // console.log(pdf_id);
                    central_object.pdfID = pdf_id;
                    const response = await fetch('/payment/api/generalCollegeList/payment/create-order/');
                    if (!response.ok) throw new Error('Failed to create payment order');
                    
                    const order = await response.json();
                    // const razorpayKeyId = sessionStorage.getItem("razorpayKeyId ");

                    return new Promise((resolve) => {
                        const options = {
                            key: central_object.razorpayKeyId,
                            amount: order.amount,
                            currency: order.currency,
                            name: "CampusDekho",
                            description: "general pdf Plan",
                            order_id: order.id,
                            handler: async function(response) {
                                const data = {
                                    name: fullName.value,
                                    email: email.value,
                                    phone: contactNumber.value,
                                    plan: "general 499",
                                    razorpay_payment_id: response.razorpay_payment_id,
                                    razorpay_order_id: response.razorpay_order_id,
                                    caste: category.value,
                                    gender: gender.value,
                                    percentileRange: percentileRange.value,
                                    pdf_id : pdf_id
                                };
                                
                                const storeRes = await fetch('/generateReadyList/payment/store', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify(data)
                                });
                                
                                const storeData = await storeRes.json();
                                if (storeData.isOk) {
                                    // showNotification('Payment processed successfully!', 'success');
                                    // console.log(storeData.pdfLink);
                                    resolve(true);
                                    
                                } else {
                                    // showNotification('Payment processing failed', 'error');
                                    resolve(false);
                                }
                            },
                            prefill: {
                                name: fullName.value,
                                email: email.value,
                                contact: contactNumber.value
                            },
                            theme: {
                                color: "#0054A6"
                            }
                        };
                        
                        const rzp = new Razorpay(options);
                        rzp.on('payment.failed', function(response) {
                            console.error('Payment failed:', response);
                            showNotification('Payment failed: ' + response.error.description, 'error');
                            resolve(false);
                        });
                        rzp.open();
                    });
                } catch (error) {
                    console.error('Payment error:', error);
                    showNotification('Payment error: ' + error.message, 'error');
                    return false;
                }
            }

            downloadPdfBtn.addEventListener('click',async function() {
                await downloadPdf();
            });

            function showPaymentModal(amount, callback) {
                const modal = document.createElement('div');
                modal.className = 'payment-modal';

                // Calculate payment breakdown
                const basePrice = (amount / 1.21).toFixed(2); // ≈ 412.40
                const cgst = (basePrice * 0.09).toFixed(2);
                const sgst = (basePrice * 0.09).toFixed(2);
                const convenienceFee = (basePrice * 0.03).toFixed(2);
                const finalAmount = (basePrice * 1.21).toFixed(2); // Should be 499

                modal.innerHTML = `
                    <div class="payment-modal-content">
                        <h3>Confirm Payment</h3>
                        <p>To proceed with generating your personalized college list, please complete the payment of ₹${finalAmount}. A detailed cost breakdown is provided below.</p>
                        
                        <div class="payment-breakdown">
                            <table style="width: 100%;">
                                <tr>
                                    <td style="text-align: left;">Base Price</td>
                                    <td style="text-align: right;">₹${basePrice}</td>
                                </tr>
                                <tr>
                                    <td style="text-align: left;">CGST (9%)</td>
                                    <td style="text-align: right;">₹${cgst}</td>
                                </tr>
                                <tr>
                                    <td style="text-align: left;">SGST (9%)</td>
                                    <td style="text-align: right;">₹${sgst}</td>
                                </tr>
                                <tr>
                                    <td style="text-align: left;">Convenience Fee (3%)</td>
                                    <td style="text-align: right;">₹${convenienceFee}</td>
                                </tr>
                                <tr class="total-row">
                                    <td style="text-align: left;"><strong>Total Payable</strong></td>
                                    <td style="text-align: right;"><strong>₹${finalAmount}</strong></td>
                                </tr>
                                <tr class="gst-row">
                                    <td colspan="2" style="text-align: center; font-size: 1.1em; padding-top: 1em;">
                                        GSTIN: 27OJKPS9666F1Z2
                                    </td>
                                </tr>
                            </table>
                        </div>
                        
                        <div class="payment-modal-buttons">
                            <button id="confirmPaymentBtn" class="payment-confirm-btn">Pay Now</button>
                            <button id="cancelPaymentBtn" class="payment-cancel-btn">Cancel</button>
                        </div>
                    </div>
                `;

                document.body.appendChild(modal);

                document.getElementById('confirmPaymentBtn').addEventListener('click', () => {
                    document.body.removeChild(modal);
                    callback(true);
                });

                document.getElementById('cancelPaymentBtn').addEventListener('click', () => {
                    document.body.removeChild(modal);
                    callback(false);
                });
            }
            
            // 
            async function downloadPdf() {
                const pdfId = central_object.pdfID;

                // console.log(pdfId);
                loadingSpinner.style.display = 'flex';
                
                // Fetch the PDF
                fetch(`/generateReadyList/download-pdf/${pdfId}`)
                    .then(response => {
                        if (!response.ok) throw new Error('Failed to download PDF');
                        return response.blob();
                    })
                    .then(blob => {
                        // Create a download link
                        const url = window.URL.createObjectURL(blob);
                        const a = document.createElement('a');
                        a.href = url;
                        a.download = `college-list-${pdfId}.pdf`;
                        document.body.appendChild(a);
                        a.click();
                        
                        // Clean up
                        window.URL.revokeObjectURL(url);
                        document.body.removeChild(a);
                        
                        // Hide loading spinner
                        loadingSpinner.style.display = 'none';
                    })
                    .catch(error => {
                        console.error('Error downloading PDF:', error);
                        // alert('Error downloading PDF. Please try again.');
                        loadingSpinner.style.display = 'none';
                    });
            }
        });
    </script>
