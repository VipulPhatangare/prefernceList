    <script>
        // Open modal with selected plan
        function openModal(planName) {
            const modal = new bootstrap.Modal(document.getElementById('planModal'));
            const modalPlanName = document.getElementById('modalPlanName');
            const modalPlanPrice = document.getElementById('modalPlanPrice');
            
            modalPlanName.textContent = planName + ' Plan';
            
            // Set price based on plan
            if (planName === 'Basic') {
                modalPlanPrice.textContent = '₹299 (one-time payment)';
            } else if (planName === 'Plus') {
                modalPlanPrice.textContent = '₹499 (one-time payment)';
            } else {
                modalPlanPrice.textContent = '₹999 (one-time payment)';
            }
            
            modal.show();
        }

        // Payment integration
        let userPaymentInfo = {};
        document.getElementById('planForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const phone = document.getElementById('phone').value;
            const plan = document.getElementById('modalPlanName').textContent.replace(' Plan', '');
            
            let amount = 299;
            if (plan === 'Plus') amount = 499;
            if (plan === 'Premium') amount = 999;

            userPaymentInfo = { name, email, phone, amount , plan};

            const response = await fetch('/saveStudentIfo',{
                method: 'POST',
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(userPaymentInfo)
            });
            
            const data = await response.json();
            if(data.isOk){
                window.location.href = '/collegeList';
            }
        });

        // Close modal when payment is complete
        const planModal = document.getElementById('planModal');
        planModal.addEventListener('hidden.bs.modal', function() {
            document.getElementById('planForm').reset();
        });
    </script>
